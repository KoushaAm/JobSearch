<link rel="stylesheet" href="results.css">

<head>
  <%- include('../partials/head'); %>
</head>

<body class = "flex bg-dark">

  <header>
    <%- include('../partials/header'); %>
  </header>
  
  <main>
    <%- include('../partials/search'); %>
    <h1 id = "test"></h1>


    <div class="box">
      <div id = "row" class="row">
        
        <% job_results.forEach(function(job) { %> 
          
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                  
                <div style ="margin-bottom: 10px;">
                  <image src = "<%= job.thumbnail %>"></image>
                </div>

                <h3 class="card-title"><%= job.title %></h3>
                <p class="card-text"><%= job.company_name %></p>
                <p class="card-text"><%= job.location %></p>
             
                <button class="expand-button" style="color: antiquewhite;">Details</button>

                <div class="job-description" style="display: none;">
                  <% for(var prop in job.extensions) { %>
                    <p class="card-text"><%= job.extensions[prop] %></p>
                  <% } %>
                </div>
                
                <div class="text-right">
                  <a href="/job/<%= job.job_id %>" class="btn btn-primary">Learn more</a>
                </div>
                

              </div>
            </div>
            
          </div >  
        <% }) %>
       
        
      </div> 
      
    </div>

  </main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
      // Access the job results from the JSON data
      $('.expand-button').click(function() {
        $(this).siblings('.job-description').toggle();
      });
 
  });
  
 
</script>

<style>
  .box {
    margin-top: 20px;
    padding: 10px;
  }

  main {
    background-color: #313131;
  }
  .card {

    border-radius: 30px;
    background: #212121;
    box-shadow: 5px 5px 10px rgb(25, 25, 25),
              -5px -5px 50px rgb(60, 60, 60);
  }
  .expand-button {
    background-color: #4caf4f00; /* Green */
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12px;
    margin: 4px 2px;
    cursor: pointer;
  }
  .job-description {
    color: antiquewhite;
  }
  .menu-content {
    width: 300px; 
    
    z-index: 999; 
    position: absolute; 
    transition:position 1s linear;
    opacity:0;
  }
  .active{
      border:1px solid green;
      transition:position 1s linear;
      opacity:1;
  }

  .btn-primary {
    background-color: #74729c;
    border-radius: 20px;
    color: #ffffff;
    margin-top: 10px;
    margin-left: 10px; /* Add margin to create space */
  }

  .btn-primary:hover {
    background-color: #b7b7b7;
    border-radius: 20px;
    color: #ffffff;
    margin-top: 10px;
    margin-left: 10px; /* Add margin to create space */
  }

  
</style>
  
